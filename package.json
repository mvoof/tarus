{
  "name": "tarus-vscode-extension",
  "displayName": "TARUS",
  "author": {
    "name": "mvoof",
    "url": "https://github.com/mvoof"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mvoof/tarus"
  },
  "publisher": "mvoof",
  "description": "A VS Code extension that provides convenient cross-language navigation between commands/events in frontend and backend code in the IDE (for Tauri projects)",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:rust",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:vue"
  ],
  "main": "./out/extension.js",
  "icon": "images/icon.png",
  "contributes": {
    "commands": [
      {
        "command": "tarus.rescan",
        "title": "Tarus: Rescan Symbols"
      }
    ],
    "configuration": {
      "title": "Tarus",
      "properties": {
        "tarus.codeLensAction": {
          "type": "string",
          "enum": [
            "new tab",
            "references"
          ],
          "default": "new tab",
          "description": "Action for CodeLens: 'new tab' — open file in new tab, 'references' — show references."
        },
        "tarus.showCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Controls whether the CodeLens will be shown for the transition."
        },
        "tarus.developerMode": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "⚠️WARNING! Do not enable it!\n Enable logging and this will also **create a debug file** in your workspace directory."
        }
      }
    }
  },
  "extensionKind": [
    "workspace",
    "ui"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
