// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Extension (Client + Server)",
      "type": "npm",

      "script": "vscode:prepublish",
      "options": {
        "cwd": "${workspaceFolder}/extension"
      },

      "problemMatcher": ["$tsc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      },
      "isBackground": false
    }
  ]
}
