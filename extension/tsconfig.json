{
  "compilerOptions": {
    "module": "node20",
    "target": "esnext",
    "outDir": "out",
    "rootDir": ".",
    "lib": ["esnext"],
    "sourceMap": true,
    "strict": true /* enable all strict type-checking options */,
    "skipLibCheck": true,
    "noEmitOnError": true
  },
  "include": ["src/**/*", "scripts/**/*"]
}
